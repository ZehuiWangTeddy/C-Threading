<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TaskManager.Pages.TaskDetailPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout Padding="10">
        <Label Text="Task Detail"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Task Title (no functionality, just static placeholder) -->
        <Entry x:Name="taskTitleEntry" 
               Placeholder="Enter task title" />

        <!-- Task Description (no functionality, just static placeholder) -->
        <Editor x:Name="taskDescriptionEditor" 
                Placeholder="Enter task description"
                HeightRequest="150" />
    </StackLayout>
</ContentPage>