<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.TaskDetails"
             BackgroundColor="White">
    
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="10">
                
                <Label Text="Task Execution Details" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"/>

                <Frame CornerRadius="10" Padding="15" BackgroundColor="#f5f5f5">
                    <VerticalStackLayout Spacing="10">
                        
                        <!-- Grid to organize two columns per row -->
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="5" RowSpacing="1">
                            
                            <!-- Task Name & Execution Time -->
                            <Label Text="Task Name:" FontSize="16" FontAttributes="Bold" Grid.Row="0" Grid.Column="0"/>
                            <Label Text="{Binding TaskName}" FontSize="16" TextColor="Black" Grid.Row="0" Grid.Column="1"/>
                            
                            <Label Text="Execution Time:" FontSize="16" FontAttributes="Bold" Grid.Row="1" Grid.Column="0"/>
                            <Label Text="{Binding ExecutionTime}" FontSize="16" TextColor="Black" Grid.Row="1" Grid.Column="1"/>
                            
                            <!-- Priority & Status -->
                            <Label Text="Priority:" FontSize="16" FontAttributes="Bold" Grid.Row="2" Grid.Column="0"/>
                            <Label Text="{Binding Priority}" FontSize="16" TextColor="Black" Grid.Row="2" Grid.Column="1"/>
                            
                            <Label Text="Status:" FontSize="16" FontAttributes="Bold" Grid.Row="3" Grid.Column="0"/>
                            <Label Text="{Binding Status}" FontSize="16" TextColor="Black" Grid.Row="3" Grid.Column="1"/>
                            
                            <!-- Thread ID (Separate Row) -->
                            <Label Text="Thread ID:" FontSize="16" FontAttributes="Bold" Grid.Row="4" Grid.Column="0"/>
                            <Label Text="{Binding ThreadId}" FontSize="16" TextColor="Black" Grid.Row="4" Grid.Column="1"/>
                        </Grid>

                        <!-- Execution Log (Own row) -->
                        <Label Text="Execution Log:" FontSize="16" FontAttributes="Bold"/>
                        <Frame BackgroundColor="Black" HeightRequest="500" CornerRadius="5">
                            <ScrollView>
                                <Label Text="{Binding ExecutionLog}" 
                                       FontSize="14" 
                                       TextColor="Lime" 
                                       LineBreakMode="WordWrap" 
                                       FontFamily="Courier New"/>
                            </ScrollView>
                        </Frame>

                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
